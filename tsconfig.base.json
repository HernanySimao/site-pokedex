    "compilerOptions": {
      "strict": true,
      "moduleResolution": "node",
      "target": "esnext",
      "module": "esnext",
      "jsx": "preserve",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules"]
  }
  