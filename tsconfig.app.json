{
  "extends": "./tsconfig.base.json", // O caminho foi atualizado
  "compilerOptions": {
    "target": "ESNext",  // Alterado para ESNext
    "module": "ESNext",  // Importante para usar import.meta
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node", // Mantenha como 'node'
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
